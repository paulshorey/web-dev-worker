{
	"include": ["api/**/*", "lib/**/*"],
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node", "@cloudflare/workers-types"],
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"strictNullChecks": false,
		"isolatedModules": false,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"baseUrl": "./",
		"paths": {
			"@/*": ["./*"],
			"@lib/*": ["./lib/*"],
			"@api/*": ["./api/*"]
		},
		"rootDirs": ["api", "lib"],
		"outDir": "esm"
	}
}
